<div class="container">
	<div class="row">
		<div class="post-form">
			<%= form_with(model: @post, local: true) do |f| %>
				<!--フラッシュメッセージ-->
				<% if flash[:alert] %>
					<div class="flash" style="font-size: 25px; color: #FF0000; text-align: center;">
						<%= flash[:alert] %>
					</div>
				<% end %>
				<!--エラーメッセージ-->
				<% if @post.errors.any? %>
					<div id="error-explanation" style="color: #FF0000; text-align: center;">
						<h4><%= @post.errors.count %>件のエラーが発生しました。</h4>
						<ul>
							<% @post.errors.full_messages.each do |message| %>
								<li class="error-message-list" style="text-align: center;"><%= message %></li>
							<% end %>
						</ul>
					</div>
				<% end %>

				<div class="image-field">
					<%= f.attachment_field :image %>
				</div>

				<div class="field">
					<%= f.text_area :content, size: '70x5', placeholder: '投稿内容' %>
				</div>

				<div class="field">
					<%= f.text_area :tag_content, size: '70x5', placeholder: '投稿タグ 例)#美味しい #美しい' %>
				</div>

				<div class="new-action">
					<%= f.submit '新規投稿', class: 'new-button' %>
				</div>
			<% end %>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<h4>コメント一覧</h4>
		<% comments.each do |comment| %>
			<%= comment.user.nickname %>
			<%= comment.content %>
			<!--ログイン（投稿）ユーザーのみ-->
			<% if comment.user == current_user %>
				<%= link_to 'コメントを削除する', post_comment_path(@post, comment), method: :delete, class: 'btn btn-danger', data: {confirm: 'コメントを削除します。よろしいですか？'} %>
			<% end %>
		<% end %>
	</div>
</div>
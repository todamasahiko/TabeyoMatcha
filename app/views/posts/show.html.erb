<div class="container">
	<div class="row">
		<h4>投稿詳細</h4>
        <%= attachment_image_tag @post, :image, size: '300x200' %>
    	<%= @post.user.nickname %>
    	<%= @post.content %>
    	<%= @post.tag_content %>

    	<% if @post.user == current_user %>
    		<div class="action">
    			<%= link_to '編集する', edit_post_path(@post.id), class: 'btn btn-primary' %>
    			<%= link_to '削除する', post_path, method: :delete, class: 'btn btn-danger', data: {confirm: '投稿を削除します。よろしいですか？'} %>
            </div>
        <% end %>
    </div>
</div>
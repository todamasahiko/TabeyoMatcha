<div class="container">
	<div class="row">
		<%= form_with(model: @post, local: true) do |f| %>
				<div class="field" style="text-align: center; padding-top: 30px;">
					<%= attachment_image_tag @post, :image, size: '600x500' %>
					<div class="image-form">
						<%= f.attachment_field :image %>
					</div>
				</div>

				<div class="field" style="text-align: center; padding-top: 5px;">
					<i class="far fa-file" aria-hidden="true"></i>
					<%= f.text_area :content, size: '90x5', placeholder: '投稿内容' %>
				</div>

				<div class="field" style="text-align: center;">
					<i class="fas fa-tags" aria-hidden="true"></i>
					<%= f.text_area :tag_content, size: '90x5', placeholder: '投稿タグ' %>
				</div>

				<div class="action">
					<%= f.submit '更新', class: 'btn btn-success btn-lg' %>
					<%= link_to '戻る', posts_path, class: 'btn btn-primary' %>
				</div>
		<% end %>
	</div>
</div>
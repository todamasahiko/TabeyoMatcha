<!--自分の投稿への「いいね」「コメント」は通知表示をしない-->
<% notifications = @notifications.where.not(visiter_id: current_user.id) %>
<!---->
<div class="container">
	<div class="row">
			<!--通知がある場合-->
			<% if @notifications.exists? %>
				<div class="notification-delete-action">
					<!--削除ボタンを表示-->
					<%= link_to destroy_all_notifications_path, method: :delete, data: {confirm: '通知をすべて削除します。よろしいですか？'}, class: 'NotificationAlldeletelink' do %>
						<i class="fas fa-trash-alt"　aria-hidden="true"></i> <span>すべて削除</span>
					<% end %>
				</div>
				<!--通知一覧-->
				<div class="notification-list" style="text-align: center;">
					<%= render @notifications %>
				</div>
			<!--通知がない場合-->
			<% else %>
				<p style="padding-top: 50px;">通知はありません</p>
			<% end %>
	</div>
</div>
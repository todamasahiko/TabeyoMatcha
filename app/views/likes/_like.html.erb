<!--いいね機能-->
<% if post.liked_by?(current_user) %>
	<%= link_to post_likes_path(post), class: 'Unlikelink', method: :delete do %>
		<i class="fas fa-heart unlike-btn" aria-hidden="true"></i>
	<% end %>
<% else %>
	<%= link_to post_likes_path(post), class: 'Likelink', method: :post do %>
		<i class="far fa-heart like-btn" aria-hidden="true"></i>
	<% end %>
<% end %>
<%= post.likes.count %>
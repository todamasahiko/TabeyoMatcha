<!--メッセージ-->
<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="flash">
    <%= flash[:alert] %>
  </div>
<% end %>
<!---->
<div class="container">
  <div class="row">
  	<div class="col-xs-2">
      <%= render 'layouts/sidebar', post: @post %>
    </div>

    <div class="col-xs-10">
      <h2>投稿ランキング</h2>
      <%= link_to '投稿一覧', posts_path %>
      <h2>いいねランキング</h2>
      <%= @all_ranks.each do |post| %>
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :image, size: '300x200' %>
        <% end %>
            <p><%= post.user.nickname %></p>
            <p><label>いいね数</label><%= post.likes.count%></p>
      <% end %>
    </div>
  </div>

  <div class="row">
    <%= link_to '新規投稿', new_post_path, class: 'btn btn-success btn-lg' %>
  </div>
</div>
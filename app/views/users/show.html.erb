<div class="container">
	<div class="row">
		<h4>登録情報</h4>
		<%= @user.nickname %>
		<%= @user.email %>
		<%= link_to '登録情報を変更する', edit_user_path, class: 'btn btn-primary' %>
		<%= link_to 'パスワードを変更する', edit_user_password_path, class: 'btn btn-primary' %>
		<%= link_to '戻る', top_path, class: 'btn btn-primary' %>
		<!--フォロー・フォロワー機能-->
		<% if current_user != @user %>
			<% if current_user.following?(@user) %>
				<%= link_to 'フォローを外す', user_relationships_path(@user.id), method: :delete, class: 'btn btn-danger', data: {confirm: 'フォローを外します。よろしいですか？'} %>
            <% else %>
				<%= link_to 'フォローをする', user_relationships_path(@user.id), method: :post, class: 'btn btn-primary' %>
			<% end %>
		<% end %>
		<!---->
		<label>投稿一覧</label>
		<label>コメント一覧</label>
		<label>いいね一覧</label>
		<label>ブックマーク一覧</label>
		<label>フォロー一覧</label>
		<label>フォロワー一覧</label>
	</div>
</div>
<div class="container">
	<div class="row">
		<h4>登録情報</h4>
		<%= @user.nickname %>
		<%= @user.email %>
		<%= link_to '登録情報を変更する', edit_user_path, class: 'btn btn-primary' %>
		<%= link_to 'パスワードを変更する', edit_user_password_path, class: 'btn btn-primary' %>
		<%= link_to '戻る', top_path, class: 'btn btn-primary' %>
		<!--フォロー・フォロワー機能-->
		<% if current_user != @user %>
			<% if current_user.following?(@user) %>
				<%= link_to 'フォローを外す', user_relationships_path(@user.id), method: :delete, class: 'btn btn-danger', data: {confirm: 'フォローを外します。よろしいですか？'} %>
            <% else %>
				<%= link_to 'フォローをする', user_relationships_path(@user.id), method: :post, class: 'btn btn-primary' %>
			<% end %>
		<% end %>
		<!---->
		<label>投稿一覧</label>
    		<%= link_to post_path(@post.id) do %>
    			<%= attachment_image_tag @post, :image, size: '300x200' %>
    		<% end %>
            <p><%= @post.tag_content %></p>
            <label>コメント数</label><%= @post.comments.count %>
            <label>いいね数</label><%= @post.likes.count%>
            <!--時間表示-->
            <p><%= date_format(@post.created_at) %></p>

    	<div class="action">
			<%= link_to '新規登録', new_post_path, class: 'btn btn-success btn-lg' %>
		</div>
		<label>コメントした投稿</label>
		<label>いいねした投稿</label>
		<label>フォローしたユーザー</label>
		<label>フォローされたユーザー</label>
	</div>
</div>
<div class="container">
	<div class="row">
		<%= form_with(model: @user, local: true) do |f| %>
			<h4>登録情報編集画面</h4>
				<div class="field">
					<label>ニックネーム</label>
					<%= f.text_field :nickname %>
				</div>

				<div class="field">
					<label>メールアドレス</label>
					<%= f.text_field :email %>
				</div>

				<div class="action">
					<%= f.submit '更新', class: 'btn btn-success btn-lg' %>
					<%= link_to '戻る', top_path, class: 'btn btn-primary' %>
				</div>
		<% end %>
	</div>
</div>